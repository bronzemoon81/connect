{
  "name": "connect",
  "description": "Bu programının amacı sizden gelen verileri bayiloji hesabınıza aktarmaktır.",
  "version": "0.2.0",
  "main": "dist-electron/main/index.js",
  "license": "MIT",
  "private": true,
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder --mac",
    "build-win": "vite build && electron-builder --win",
    "build-all": "vite build && electron-builder --mac --win",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.example.bayiloji",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/0.2.0"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bronzemoon81",
        "repo": "connect"
      }
    ],
    "mac": {
      "icon": "public/icons/icon@512x512.png",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "public/icons/icon@512x512.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/line-clamp": "0.4.4",
    "@vitejs/plugin-vue": "5.1.0",
    "autoprefixer": "10.4.19",
    "electron": "^22.3.27",
    "electron-builder": "24.13.3",
    "postcss": "8.4.40",
    "postcss-advanced-variables": "4.0.0",
    "postcss-import": "16.1.0",
    "prettier": "^3.5.3",
    "sass": "1.77.8",
    "tailwindcss": "3.4.6",
    "vite": "5.3.5",
    "vite-plugin-electron": "0.28.7",
    "vite-plugin-electron-renderer": "0.14.5"
  },
  "dependencies": {
    "@bugsnag/electron": "7.25.0",
    "@bugsnag/js": "7.25.0",
    "@bugsnag/plugin-vue": "7.25.0",
    "@popperjs/core": "2.11.8",
    "@tailwindcss/forms": "0.5.7",
    "@vuepic/vue-datepicker": "9.0.1",
    "ace-builds": "1.35.4",
    "axios": "1.7.2",
    "blueimp-md5": "2.19.0",
    "date-fns": "3.6.0",
    "debounce": "2.1.0",
    "electron-updater": "^6.6.2",
    "handsontable": "6.2.2",
    "howler": "2.2.4",
    "joi": "17.13.3",
    "knex": "2.5.1",
    "lodash": "4.17.21",
    "lucide": "0.414.0",
    "lucide-vue-next": "0.414.0",
    "mssql": "11.0.1",
    "mysql": "2.18.1",
    "mysql2": "3.10.3",
    "ngrok": "5.0.0-beta.2",
    "os": "0.1.2",
    "path": "0.12.7",
    "pinia": "2.1.7",
    "rollup-plugin-copy": "3.5.0",
    "sqlite3": "5.1.6",
    "tippy.js": "6.3.7",
    "toastify-js": "1.12.0",
    "uuid": "10.0.0",
    "vue": "3.4.34",
    "vue-color-kit": "1.0.6",
    "vue-router": "4.4.0",
    "vue-the-mask": "0.11.1"
  }
}
